{

  "manifest_version": 2,
  "name": "Switcherhost",
  "version": "0.1",

  "description": "Redirects requests to another host, live",

  "background": {
    "scripts": ["switcherhost.js"]
  },

  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/editor.html",
    "default_icon": {
      "32": "icons/logo-32.png",
      "48": "icons/logo-48.png",
      "64": "icons/logo-64.png",
      "96": "icons/logo-96.png"
    }
  }

}
